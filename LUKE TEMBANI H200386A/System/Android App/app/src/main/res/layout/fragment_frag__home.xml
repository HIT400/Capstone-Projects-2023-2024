<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragments.">

    <TextView
        android:id="@+id/dashboard_title"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="italic"
        android:text="Dashboard" />

    <androidx.cardview.widget.CardView
        android:layout_margin="15dp"
        android:id="@+id/total_chicks"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/dashboard_title">

    <TextView
        android:textAlignment="center"
        android:layout_gravity="center|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Number Of Chicks\n4500"
        />


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:elevation="10dp"
        android:layout_margin="15dp"
        android:id="@+id/total_feed"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/total_chicks">

    <TextView
        android:textAlignment="center"
        android:layout_gravity="center|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Feed (Kg)\n4500"
        />

    </androidx.cardview.widget.CardView>



</RelativeLayout>